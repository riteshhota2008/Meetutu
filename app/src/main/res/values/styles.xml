<resources>

    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Display1">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextAppearance.Display1.Light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextAppearance.Headline">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Headline.Inverse">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="TextAppearance.Subhead">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Subhead.Inverse">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="TextAppearance.Body" />

    <style name="TextAppearance.Body.Dim">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.Body.UltraDim">
        <item name="android:textColor">?android:attr/textColorTertiary</item>
    </style>

</resources>
